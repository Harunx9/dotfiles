{
    "niri/workspaces": {
        "format": "{icon}",
        "format-icons": {
            "main": "󱩊",
            "code": "",
            "games": "",
            "browser": "󱞐"
        }
    },
    "niri/language": {
        "format": "KB:[{shortDescription}]"
    },
    "niri/window": {
        "separate-outputs": true,
        "icon": true,
        "max-length": 15
    },
    "battery": {
        "format": "{capacity}% {icon}",
        "format-icons": [
            "",
            "",
            "",
            "",
            ""
        ]
    },
    "clock": {
        "interval": 1,
        "format": "{:%H:%M}",
        "format-alt": "{:%d/%m/%y}",
        "tooltip-format": "<tt><small>{calendar}</small></tt>"
    },
    "tray": {
        "icon-size": 20,
        "spacing": 10
    },
    "cpu": {
        "format": "CPU {usage}% {icon}",
        "format-icons": [
            "▁",
            "▂",
            "▃",
            "▄",
            "▅",
            "▆",
            "▇",
            "█"
        ],
        "on-click": "flatpak run io.missioncenter.MissionCenter"
    },
    "memory": {
        "interval": 30,
        "format": "RAM {used:0.1f}G/{total:0.1f}G ",
        "on-click": "flatpak run io.missioncenter.MissionCenter"
    },
    "disk": {
        "interval": 30,
        "format": "{used}/{total}",
        "unit": "GB",
        "on-click": "flatpak run io.missioncenter.MissionCenter"
    },
    "bluetooth": {
        "format": " {status}",
        "format-disabled": "",
        "format-connected": " {num_connections} connected",
        "tooltip-format": "{controller_alias}\t{controller_address}",
        "tooltip-format-connected": "{controller_alias}\t{controller_address}\n\n{device_enumerate}",
        "tooltip-format-enumerate-connected": "{device_alias}\t{device_address}",
        "on-click": "blueman-manager"
    },
    "pulseaudio": {
        "format": "{volume}% {icon}",
        "format-bluetooth": "{volume}% {icon}",
        "format-muted": "",
        "format-icons": {
            "default": [
                "",
                ""
            ]
        },
        "scroll-step": 1,
        "on-click": "flatpak run org.pulseaudio.pavucontrol"
    },
    "group/group-power": {
        "orientation": "inherit",
        "drawer": {
            "transition-duration": 500,
            "children-class": "power",
            "transition-left-to-right": false
        },
        "modules": [
            "custom/power",
            "custom/quit",
            "custom/lock",
            "custom/reboot"
        ]
    },
    "custom/quit": {
        "format": "󰗼",
        "tooltip": true,
        "tooltip-format": "exit niri",
        "on-click": "niri msg action quit"
    },
    "custom/lock": {
        "format": "󰍁",
        "tooltip": true,
        "tooltip-format": "lock",
        "on-click": "swaylock -i /home/harun/dotfiles/wallpapers/ergo.jpg"
    },
    "custom/reboot": {
        "format": "󰜉",
        "tooltip": true,
        "tooltip-format": "restart",
        "on-click": "loginctl reboot"
    },
    "custom/power": {
        "format": "",
        "tooltip": true,
        "tooltip-format": "power off",
        "on-click": "loginctl poweroff"
    }
}
